generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role{
    id    String @id @default(uuid())
    name  String @unique
    users User[] // One role, many users

}

model User {
  id        String @id @default(uuid())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])
}


model blacklistedToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
}

